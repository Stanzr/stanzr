<%
  for( var i = 0; i < val.entries.length; i++ ) {
    var entry = val.entries[i]
    var type = entry.t
    var body = entry.b

    var avimg = val.usermap[body.f] ? val.usermap[body.f].avimg : ''

    if( 'm' == type ) {
%>
        <li class="message clearfix" style="display:block">
