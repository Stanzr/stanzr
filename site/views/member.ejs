  <li id="hostchat_topicitem_tm" class="hostchat_topic">
    <label>Topic name</label>
    <input><br />

    <label>Topic description</label>
    <textarea>
    </textarea>
  </li>

  <br />
  <a href="javascript:void(0)" id="hostchat_donebtn" class="textbtn">Create this chat</a>
